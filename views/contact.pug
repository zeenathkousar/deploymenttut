extends base.pug

block scripts 
    script(src='../static/script.js')

block style 
    style 
        include ../static/style.css
        include ../static/stylecontact.css
block content
    div.contactbody 
        h2 Contact Page 
        form(action='/contact',method="post",class="myForm ")
            input(type="text", class="myInput",name="name",placeholder="Enter Your Name")
            input(type="text", class="myInput",name="age",placeholder="Enter Your Age")
            input(type="text", class="myInput",name="year",placeholder="Enter Your Year")
            input(type="text", class="myInput",name="email",placeholder="Enter Your email")
            button(type="submit",class="btn") 
                | Submit

